generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  questions Question[]
}

model Question {
  id      Int     @id @default(autoincrement())
  type    String
  text    String
  options String?
  quizId  Int
  quiz    Quiz    @relation(fields: [quizId], references: [id])
}
